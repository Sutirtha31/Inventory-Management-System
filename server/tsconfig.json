{
  "include": ["src"], // include all files from src
  "exclude": ["node_modules"], // exclude node_modules
  "compilerOptions": {
    "target": "es2016", // output JavaScript version
    "module": "commonjs", // module system
    "rootDir": "./src", // root folder for TypeScript files
    "outDir": "./dist", // output directory for compiled JavaScript
    "esModuleInterop": true, // enables compatibility with commonjs
    "forceConsistentCasingInFileNames": true, // enforces consistent casing in imports
    "strict": true, // enable all strict type-checking options
    "skipLibCheck": true // skips type checking of declaration files
  }
}
